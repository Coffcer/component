{
  "schema": {
    "name": {
      "type": "string",
      "required": true,
      "label": "Component name"
    },
    "description": {
      "type": "string",
      "required": true,
      "label": "Project description",
      "default": "A Vue.js component"
    },
    "author": {
      "type": "string",
      "label": "Author"
    },
    "port": {
      "type": "number",
      "label": "Dev port",
      "default": 8080
    },
    "private": {
      "type": "boolean",
      "default": true
    },
    "test": {
      "type": "confirm",
      "message": "Setup unit tests with Karma + Mocha?"
    }
  },
  "filters": {
    "test/**/*": "test"
  },
  "completeMessage": "To get started:\n\n  cd {{destDirName}}\n  npm install\n  npm run dev\n\nDocumentation can be found at https://github.com/Coffcer/component"
}
